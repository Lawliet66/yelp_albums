<%- include("partials/header") %>

<div class ="container">
    <h1>Make New List</h1>
    <form action="/profile/<%=user.username%>/lists" method="POST">
    
        <div class="form-group">
            <div class="form-group">
                <label for="title">Name</label>
                <input type="text" class="form-control" name="title" id='title' autofocus placeholder="List name here...">
              
              </div>
            <div class="form-group">
            <label for="text">Description</label>
            <textarea class="form-control" name="text" id="text" cols="80" rows="8" placeholder=" Description here..." required></textarea>
        </div>
        </div>
      
        <button type="submit" class="btn btn-primary">Create List</button>
    </form>
</div>
<%- include("partials/footer") %>