<%- include("partials/header") %>
      
        <div class="container">
           
<div class="row mt-2">
            <% albums.forEach((album)=>{ %>
                <div class="card m-3 box">
                    <a href="./albums/<%=album._id%>">
                    <img class="card-img card-img-top" src="<%=album.image%>" alt="Pic of album">
                    </a>
                    <h3 class="card-title mt-3"><%=album.title%></h3>
                    <p class="card-text mb-3 mx-3"><%=album.description%></p>
             </div>
             <%  }) %>
            </div> 
        </div>
        <%- include("partials/footer") %>